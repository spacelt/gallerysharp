@model GallerySharp.Models.GalleryViewModels.ChangePhotoNameView

@{
    ViewData["Title"] = "Change Photo Name";
}

<h2>ChangePhotoName</h2>

<form asp-action="ChangePhotoName">
    <div class="form-horizontal">
        <br />
        <h4>Old photo name: @ViewBag.oldPhotoName</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewPhotoName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewPhotoName" class="form-control" />
                <span asp-validation-for="NewPhotoName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="ViewAlbum">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
