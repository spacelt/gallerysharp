@model GallerySharp.Models.GalleryModels.Photo

@{
    ViewData["Title"] = "Add New Photo";
}

<h2>Add New Photo</h2>

<form method="post" asp-action="AddPhoto" asp-controller="Album" enctype="multipart/form-data" id=@ViewData["albumId"]>
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="PhotoName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhotoName" class="form-control" required/>
                <span asp-validation-for="PhotoName" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" name="upload" required/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
       
    </div>
</form>


<div>
    @Html.ActionLink("Back to the Album", "ViewAlbum", new { id = ViewData["albumId"] })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
