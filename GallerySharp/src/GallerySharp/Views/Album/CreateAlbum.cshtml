@model GallerySharp.Models.GalleryViewModels.CreateAlbumView

@{
    ViewData["Title"] = "Create Album";
}

<h2>Create New Album</h2>

<form asp-action="CreateAlbum">
    <div class="form-horizontal">
        <br />
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AlbumName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Albums</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
